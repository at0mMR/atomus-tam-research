# Atomus TAM Research - Environment Configuration Template
# Copy this file to .env and fill in your actual API credentials

# HubSpot API Configuration
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_PORTAL_ID=your_hubspot_portal_id_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# HigherGov API Configuration
HIGHERGOV_API_KEY=your_highergov_api_key_here
HIGHERGOV_BASE_URL=https://api.highergov.com/v1

# Database Configuration
DATABASE_URL=sqlite:///data/atomus_tam_research.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=data/logs/atomus_tam_research.log

# Research Configuration
RESEARCH_BATCH_SIZE=10
RESEARCH_DELAY_SECONDS=1
MAX_RESEARCH_RETRIES=3

# Web Scraping Configuration
SCRAPING_DELAY_MIN=1
SCRAPING_DELAY_MAX=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Rate Limiting
HUBSPOT_RATE_LIMIT=100
OPENAI_RATE_LIMIT=60
HIGHERGOV_RATE_LIMIT=1000

# Development Settings
DEBUG=False
ENVIRONMENT=production