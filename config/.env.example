# Atomus TAM Research & Scoring System - Environment Configuration
# Copy this file to .env and fill in your actual API credentials

# =============================================================================
# API CREDENTIALS
# =============================================================================

# HubSpot API Configuration
HUBSPOT_API_KEY=your_hubspot_api_key_here
HUBSPOT_PORTAL_ID=your_hubspot_portal_id_here
HUBSPOT_BASE_URL=https://api.hubapi.com

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# HigherGov API Configuration
HIGHERGOV_API_KEY=your_highergov_api_key_here
HIGHERGOV_BASE_URL=https://api.highergov.com

# Apollo API Configuration (Optional - Not currently used)
APOLLO_API_KEY=your_apollo_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Rate Limiting
DEFAULT_RATE_LIMIT=60
HUBSPOT_RATE_LIMIT=100
OPENAI_RATE_LIMIT=50
HIGHERGOV_RATE_LIMIT=30

# Web Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# Proxy Configuration (Optional)
USE_PROXY=false
PROXY_HOST=your_proxy_host
PROXY_PORT=your_proxy_port
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# Data Storage Paths
DATA_DIR=./data
LOGS_DIR=./data/logs
RESEARCH_RESULTS_DIR=./data/research_results
TEMP_DIR=./temp_data

# CSV File Paths
PROSPECT_DATABASE_PATH=./data/prospect_database.csv
SCORING_WEIGHTS_PATH=./data/scoring_weights.json

# =============================================================================
# RESEARCH CONFIGURATION
# =============================================================================

# Research Depth Settings
BASIC_RESEARCH_ENABLED=true
DEEP_RESEARCH_ENABLED=true
MAX_RESEARCH_PAGES=10
RESEARCH_TIMEOUT=300

# Scoring Configuration
MIN_SCORE_THRESHOLD=45
TIER_1_THRESHOLD=90
TIER_2_THRESHOLD=75
TIER_3_THRESHOLD=60
TIER_4_THRESHOLD=45

# =============================================================================
# HUBSPOT INTEGRATION
# =============================================================================

# HubSpot Object Settings
COMPANIES_BATCH_SIZE=100
CONTACTS_BATCH_SIZE=100
SYNC_INTERVAL_HOURS=24
BACKUP_BEFORE_SYNC=true

# Custom Property Names
ATOMUS_SCORE_PROPERTY=atomus_score
DEFENSE_CONTRACT_SCORE_PROPERTY=defense_contract_score
TECHNOLOGY_RELEVANCE_SCORE_PROPERTY=technology_relevance_score
COMPLIANCE_INDICATORS_SCORE_PROPERTY=compliance_indicators_score
TIER_CLASSIFICATION_PROPERTY=tier_classification

# =============================================================================
# COMPLIANCE & ETHICS
# =============================================================================

# Scraping Ethics
RESPECT_ROBOTS_TXT=true
MIN_REQUEST_DELAY=1
MAX_CONCURRENT_REQUESTS=5
ROTATE_USER_AGENTS=true

# Data Privacy
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true
DATA_RETENTION_DAYS=365

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@company.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_RECIPIENTS=admin@company.com

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#gtm-intelligence